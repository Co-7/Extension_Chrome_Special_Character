{
	"manifest_version": 2,

	"name": "Caractères spéciaux",
	"version": "1.0",
	"author": "Co-7",
	"description": "Une extension pour copié facilement dans le presse-papiers les caractères spéciaux.",
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"storage",
		"activeTab"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}

